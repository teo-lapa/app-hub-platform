# Configurazione Odoo
ODOO_URL=http://localhost:8069
ODOO_DB=odoo

# Configurazione JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Configurazione Next.js
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# Configurazione Database PostgreSQL (per Time & Attendance, Email AI, ecc.)
# Formato: postgresql://user:password@host:port/database
# Esempio Vercel Postgres: postgres://default:xxxxx@xxxxx.us-east-1.postgres.vercel-storage.com:5432/verceldb
POSTGRES_URL=postgresql://user:password@localhost:5432/apphub

# Configurazione Anthropic AI (per Product Creator AI)
# Ottieni la tua API key da: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Super Dashboard - Mock Data Toggle
# Set to 'true' for using mock data, 'false' for real Odoo data
NEXT_PUBLIC_USE_MOCK_DATA=true

# ============================================
# VOICE RECORDINGS & PLAUD INTEGRATION
# ============================================

# OpenAI API (per Whisper trascrizione audio)
# Ottieni la tua API key da: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Plaud Cloud API (OPZIONALE - per sync automatico da Plaud)
# Richiedi accesso: https://docs.google.com/forms/d/e/1FAIpQLSeMr2cRAjrWK79k6HuPOjeOoU7bqHDbk1ZQTsH3RZ8rhJPwAg/viewform
PLAUD_CLIENT_ID=your-plaud-client-id
PLAUD_SECRET_KEY=your-plaud-secret-key
PLAUD_API_BASE_URL=https://api.plaud.ai
PLAUD_SIGNING_SECRET=your-webhook-signing-secret

# Vercel Blob Storage (per audio files)
# Gi√† configurato in Vercel dashboard
BLOB_READ_WRITE_TOKEN=vercel_blob_token

# ============================================
# REVIEW MANAGER PRO
# ============================================

# Chiave di cifratura per credenziali piattaforme (OBBLIGATORIA IN PRODUCTION)
# Genera con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# DEVE essere lunga almeno 32 caratteri
RM_ENCRYPTION_KEY=your-64-char-hex-encryption-key-generate-with-node-crypto-randomBytes

# Google OAuth (per Google My Business)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/review-manager/oauth/google/callback

# Facebook App (per Facebook Reviews)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/review-manager/oauth/facebook/callback

# Instagram Business API (usa stesso app Facebook)
INSTAGRAM_APP_ID=your-facebook-app-id
INSTAGRAM_APP_SECRET=your-facebook-app-secret

# TikTok Developer App
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3000/api/review-manager/oauth/tiktok/callback

# Trustpilot API
TRUSTPILOT_API_KEY=your-trustpilot-api-key
TRUSTPILOT_API_SECRET=your-trustpilot-api-secret
TRUSTPILOT_REDIRECT_URI=http://localhost:3000/api/review-manager/oauth/trustpilot/callback

# Email Notifications (opzionale - per notificare nuove recensioni)
# Usa Resend, SendGrid, o altro provider SMTP
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=reviews@yourdomain.com
SMTP_FROM_NAME=Review Manager Pro